{
    "openapi": "3.0.0",
    "info":{
        "version": "1.0.0",
        "description": "API for e-commerce application",
        "title": "E-Commerce API"
    },
    "server": [
        {
            "url":"http://localhost:3400"
        }
    ],
    "components":{
        "securitySchemes":{
            "JWT": {
                "in": "header",
                "name": "Authorization",
                "type": "apiKey"
            }
        }
    },
    "paths": {
        "/api/products": {
            "get" : {
                "tags": ["Products"],
                "summary": "Get Product",
                "description": "User will get all products",
                "security": [{"JWT": {}}],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401":{
                        "description": "Unauthorized"
                    }

                }
            }
        },
        "/api/users/signin": {
            "post" : {
                "tags": ["Users"],
                "summary": "Login",
                "description": "User login to get token",
                "requestBody": {
                        "content":
                        {
                            "application/json": 
                                {
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "email": {
                                                "type": "string"
                                            },
                                            "password":{
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                        }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400":{
                        "description": "Invalid credentials"
                    }

                }
            }
        }
    }
}